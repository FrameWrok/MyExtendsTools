<UserControl x:Class="BackFiles_New.UserControls.ChildControls.MonitorFiles"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BackFiles_New.UserControls.ChildControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="45"/>
            <RowDefinition Height="45"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <CheckBox Grid.Row="1" Name="chkFloderChangeClearProcess" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10 5 0 0" Unchecked="chkFloderChangeClearProcess_Checked" Checked="chkFloderChangeClearProcess_Checked">文件夹修改清空文件</CheckBox>
        <TextBox Grid.Row="1" Name="txtFloderChangeClearPath" Height="20" VerticalAlignment="Bottom" Margin="10 0 80 0"></TextBox>
        <Label Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="20" Padding="0 0 5 0">文件夹路径</Label>
    </Grid>
</UserControl>
